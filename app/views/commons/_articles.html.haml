.container
  = render 'commons/header'
  = render 'commons/tabs'

  - articles.each do |article|
    .article{data: {article_id: article.id}}
      = link_to account_path(article.user), class: 'article_header' do
        .article_header_userImage
          = image_tag article.user.avatar_image
        .article_header_info
          .article_header_userName
            = article.user.username
          .article_header_time
            = article.created_at
      .article_body
        .article_body_image
          - article.images.each do |image|
            = image_tag(image)
        .article_body_icon
          .article_body_icon_heart.inactive-heart
            = image_tag 'heart.svg'
          .article_body_icon_heart.active-heart.hidden
            = image_tag 'heart-active.svg'
          .article_body_icon_comment
            = link_to article_comments_path(article) do
              = image_tag 'comment.svg'
          .article_body_icon_share
            = image_tag 'share.svg'
        .article_body_likeCount
          %p
            - if article.likes.count > 0
              - if article.likes.count > 1
                #{article.likes.last&.user&.username} and #{article.likes.count - 1} other#{article.likes.count > 2 ? 's' : ''} liked your post
              - else
                #{article.likes.last&.user&.username} liked your post
        .article_body_content
          %p= article.user.username
          %p= article.content
        = link_to '削除する', article_path(article), data: {method: 'delete', confirm: '本当に削除してもよろしいですか?'}

= javascript_pack_tag 'article'